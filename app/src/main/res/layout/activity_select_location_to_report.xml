<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/background">

        <Button
            android:id="@+id/currentLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="Use Current Location"
            android:minWidth="20dp"
            android:text="Current Loc"
            android:clickable="true"/>

        <Button
            android:id="@+id/selectLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/currentLocationButton"
            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:contentDescription="Use Selected Location"
            android:minWidth="20dp"
            android:text="Select Loc"
            android:clickable="true"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:contentDescription="cencel report"
            android:minWidth="20dp"
            android:text="X"
            android:clickable="true"/>


    </RelativeLayout>
</LinearLayout>