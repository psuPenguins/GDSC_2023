<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_report"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="colorOnPrimary"
    android:clipToOutline="true"
    android:padding="0dp">

    <Button
        android:id="@+id/backButton"
        android:layout_width="72dp"
        android:layout_height="69dp"
        android:background="@drawable/backButton_foreground"
        android:contentDescription="10dp" />

    <Button
        android:id="@+id/uploadImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/backButton"
        android:layout_centerInParent="true"
        android:background="@drawable/uploadImageButton_foreground"
        android:contentDescription="10dp" />

    <EditText
        android:id="@+id/etNewReport"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/uploadImageButton"
        android:layout_above="@id/hsvDangerType"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="2"
        android:hint="Insert Description...."
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <HorizontalScrollView
        android:id="@+id/hsvDangerType"
        android:layout_above="@+id/hsvSeverity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/newIcyRoadButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Icy Road"
                android:contentDescription="10dp" />

            <Button
                android:id="@+id/newUnevenRoadButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Uneven Road"
                android:contentDescription="10dp" />

            <Button
                android:id="@+id/newObstaclesButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Obstacles"
                android:contentDescription="10dp" />

            <Button
                android:id="@+id/newPuddlesButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Puddles"
                android:contentDescription="10dp" />

            <Button
                android:id="@+id/newOthersButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Others"
                android:contentDescription="10dp" />
        </LinearLayout>

    </HorizontalScrollView>


    <LinearLayout
        android:id="@+id/hsvSeverity"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/submitReportButton"
        android:orientation="horizontal">

        <Button
            android:id="@+id/newMinorButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Minor"
            android:contentDescription="10dp" />
        <Button
            android:id="@+id/newModerateButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Moderate"
            android:contentDescription="10dp" />
        <Button
            android:id="@+id/newSeriousButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Serious"
            android:contentDescription="10dp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitReportButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="SUBMIT"
        android:textAlignment="center" />

</RelativeLayout>
