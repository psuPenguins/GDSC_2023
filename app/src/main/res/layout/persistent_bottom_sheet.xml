<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_peekHeight="64dp"
    app:behavior_hideable="false"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >

    <RelativeLayout
        android:background="#424040"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <Button
            android:id="@+id/filterButton"
            layout="@layout/bt_filter"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="95dp"
            android:layout_marginTop="5dp" />
        <Button
            android:id="@+id/addReportButton"
            layout="@layout/bt_add_report"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="95dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#858383"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <HorizontalScrollView
            android:id="@+id/hsvDangerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_attributes"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            tools:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <include layout="@layout/type_icy_road" />

                <include layout="@layout/type_uneven" />

                <include layout="@layout/type_obstacle" />

                <include layout="@layout/type_puddle" />

                <include layout="@layout/type_others" />
            </LinearLayout>

        </HorizontalScrollView>

        <include
            layout="@layout/hsv_severity"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:layout_below="@id/tv_severity"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_attributes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Filter Attributes:" />

        <TextView
            android:id="@+id/tv_severity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hsvDangerType"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:text="Filter Severity:" />

    </RelativeLayout>

</LinearLayout>